{
	"extends": "@tsconfig/recommended/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"skipLibCheck": true,
		"strict": true,
		"module": "esnext",
		"target": "es2015",
		"jsx": "react-jsx",
		"jsxImportSource": "@emotion/react",
		"baseUrl": "./",
    "paths": {
        "components/*": ["src/components/*"],
        "pages/*": ["src/pages/*"],
        "logic/*": ["src/logic/*"],
        "constants/*": ["src/constants/*"],
				"static/*": ["src/static/*"],
				"types/*": ["src/types/*"],
				"routes/*": ["src/routes/*"],
				"theme/*": ["src/theme/*"],
    }
	},
}